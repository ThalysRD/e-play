{
  "name": "e-play",
  "version": "1.0.0",
  "description": "E-commerce para Compra e Venda de Jogos FÃ­sicos Usados",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-database && npm run migration:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate -m infra/migrations --envPath .env.development down",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "wait-for-database": "node infra/scripts/wait-for-database.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async-retry": "^1.3.3",
    "bcryptjs": "^3.0.2",
    "cookie": "1.0.2",
    "dotenv": "^16.4.4",
    "firebase": "12.4.0",
    "next": "^13.1.6",
    "next-connect": "^1.0.0",
    "node-pg-migrate": "^6.2.2",
    "nodemailer": "7.0.5",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "swr": "2.2.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv-expand": "^12.0.3",
    "jest": "^29.6.2",
    "prettier": "^3.6.2",
    "set-cookie-parser": "2.7.1"
  }
}
